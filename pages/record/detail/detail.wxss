/* pages/record/detail/detail.wxss */

.container {
  height: 100vh;
  overflow: scroll;
}

.map {
  width: 100%;
  height: 400rpx;
}

.content {
  height: calc(100vh - 400rpx);
  overflow: scroll;
  padding-bottom: 80rpx;
}

.nav .cu-item {
  margin: 0;
  border-bottom: 4rpx solid #ddd;
}

.cu-form-group {
  align-items: unset;
  padding-top: 20rpx;
}

video {
  width: 100%;
  max-height: 85px;
}

.upload {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 3rpx;
  background: #fff;
}

.upload button {
  width: 100%;
}

.cu-modal {
  display: none;
}

.cu-modal.show {
  display: block;
}

.audio {
  width: 100% !important;
  background: #0081ff;
  padding-left: 30rpx;
  color: #fff;
  height: 100rpx;
  border-radius: 50rpx;
  line-height: 100rpx;
  position: relative;
}

.audio text.lg{
  font-size: 50rpx;
}
.audio view{
  display: inline-block;
  position: absolute
}
.margin-bottom:last-child{
  margin-bottom: 10rpx
}